{
    "name": "BDD-Resnet34_aug",
    "n_gpu": 1,
    "use_synch_bn": false,

    "train_loader": {
        "type": "BDD",
        "args":{
            "data_dir": "/home/felixfu/data/classification/BDD",

            "base_size": 256,
            "crop_size": 224,
            "augment": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": true,
            "histogram": true,

            "num_workers": 8,
            "batch_size": 160,
            "shuffle": true,

            "in_channels": 1
        }
    },

    "val_loader": {
        "type": "BDD",
        "args":{
            "data_dir": "/home/felixfu/data/classification/BDD",

            "crop_size": 224,
            "histogram": true,

            "batch_size": 160,
            "num_workers": 4,
            "in_channels": 1,

            "val": true
        }
    },

    "arch": {
        "type": "Resnet34",
        "args": {
            "in_channels": 1,
            "pretrained": false,
            "freeze_bn": false
        }
    },


    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,

    "optimizer": {
        "type": "SGD",
        "differential_lr": false,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },
    "lr_scheduler": {
        "type": "StepLR_",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },

    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 1,
  
        "monitor": "max top1",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 1
    }
}
